<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kryptkode.cyberman.djtech">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_dj_tech_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DJTechHomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeamMembersActivity"
            android:label="Team Members" />
        <activity
            android:name=".BlogPostDetailActivity"
            android:label="@string/title_activity_blog_post_detail"
            android:parentActivityName=".DJTechHomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.kryptkode.cyberman.djtech.DJTechHomeActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Options" />
        <activity android:name=".ContactUsActivity" />
        <activity android:name=".OptionsActivity" />
        <activity android:name=".SolidColorActivity" />
        <activity android:name=".FAQsActivity" />
        <activity android:name=".InformationListActivity" />
        <activity android:name=".AppInfoActivity" />
        <activity android:name=".AboutActivity"></activity>
    </application>

</manifest>