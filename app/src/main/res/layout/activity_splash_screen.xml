<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:theme="@style/MyTheme.Splash">
    <ImageView
        android:id="@+id/dj_tech_logo"
        android:layout_width="144dp"
        android:layout_height="144dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/dj_tech_logo"
        android:background="@drawable/djtech_logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dj_tech_logo"
        android:text="@string/djtech"
        android:textColor="@color/colorAccent"
        android:textAppearance="?android:textAppearanceMedium"
        android:gravity="center_horizontal"/>
</RelativeLayout>
